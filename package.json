{
  "name": "server",
  "version": "0.0.1",
  "engines": {
    "node": "10.15.3"
  },
  "private": true,
  "scripts": {
    "start": "node index.js --exec babel-node --presets babel-preset-env",
    "start-client": "cd client && npm start",
    "dev": "run-p start start-client",
    "test": "cross-env NODE_ENV=test mocha server/ --recursive",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "nyc npm run test",
    "heroku-postbuild": "sequelize db:migrate && cd client && npm install --only=dev --no-shrinkwrap && npm install && npm run build"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^7.0.0",
    "ejs": "~2.5.7",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "npm-run-all": "^4.1.5",
    "pg": "^7.8.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.1.0",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-istanbul": "^5.1.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.0.2",
    "nock": "^10.0.6",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.29.6"
  },
  "nyc": {
    "include": [
      "*.js",
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "json",
      "text-summary"
    ],
    "exclude": [
      "dist",
      "test",
      "node_modules",
      "coverage",
      "jenkins",
      "client",
      "routes",
      ".circleci"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
